var refreshChat = function() {
  // get old scrolling position
  var $cont = $('.chat-window');
  var scrollPos = $cont.scrollTop();

  $('#chat').html("<%= escape_javascript(render partial: 'chat_window') %>");

  // return old scrolling position
  var $cont = $('.chat-window');
  $cont[0].scrollTop = scrollPos;
};

refreshChat();

