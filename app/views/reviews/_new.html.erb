<%= simple_form_for([user, booking, @review], remote: true) do |f| %>
  <%= f.error :base %>
  <%= f.error_notification %>
  <div class="form-actions">
    <%= f.input :comment, label: false, as: :text, class: 'review_form' %>
    <i class='fa fa-star star-review'></i><%= f.select :rating, [1, 2, 3, 4, 5 ], prompt: t('reviews.select_rating') %>
    <%= f.submit t('reviews.leave'), class: "btn btn-sm btn-primary btn-close-review", id: "close-review" %>
  </div>
<% end %>


