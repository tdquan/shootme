<%= form_tag user_wallet_topup_path(amount: params[:amount]) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= '%.2f' % (params[:amount].to_i/100) %> â‚¬</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          Stripe.setPublishableKey("<%= Rails.configuration.stripe[:secret_key] %>");
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Account Activation"
          data-amount="<%= params[:amount] %>"
          data-locale="auto"></script>
<% end %>
