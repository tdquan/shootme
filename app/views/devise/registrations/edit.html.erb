<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="padded-card">
    <div class="card">
      <h2>Edit profile</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
          <div class="form-inputs">
            <div class="row">
              <div class="col-md-12">
                <p class="title-edit-page">Enter your current informartion:</p>
              </div>
              <div class="col-md-6">
                <%= f.input :email, required: true, autofocus: true %>
              </div>
              <div class="col-md-6">
                <%= f.input :current_password, required: true %>
              </div>
              <div class="col-md-12">
                <p class="title-edit-page">Change your password:</p>
              </div>
              <div class="col-md-6">
                <%= f.input :password, autocomplete: "off", required: false %>
              </div>
              <div class="col-md-6">
                <%= f.input :password_confirmation, required: false %>
              </div>
              <div class="col-md-12">
                <p class="title-edit-page">Update your informartion:</p>
              </div>
              <div class="col-md-6">
                <%= f.input :first_name, required: true %>
              </div>
              <div class="col-md-6">
                <%= f.input :last_name, required: true %>
              </div>
              <div class="col-md-6">
                <%= f.input :address, required: false %>
              </div>
              <div class="col-md-6">
                <%= f.input :postal_code, required: false %>
              </div>
              <div class="col-md-12">
                <p class="title-edit-page">Upload avatar:</p>
              </div>
              <div class="col-md-12"><%= f.input :avatar, as: :attachinary, label: false, class: "attachinary-input" %></div>
              <div class="col-md-12">
                <div class="checkbox">
                  <label>
                    <input type="checkbox"><p class="title-edit-page">Are you a photographer?</p>
                  </label>
                </div>
              </div>
              <div class="hidden_photographer">
                <div class="col-md-6">
                  <%= f.input :price, required: true %>
                </div>
                <div class="col-md-12">
                  <%= f.input :photo, required: false, as: :file %>
                </div>
                <div class="col-md-12">
                  <%= f.input :description, required: true, as: :text %>
                  <%= f.input :photographer, value: true, as: :hidden %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-actions text-center">
            <%= f.button :submit, "Update", class: "btn btn-primary" %>
            <br>
            <%= link_to "Back", :back %>
          </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <script type="text/javascript">
    //when the page is loaded
    $(document).ready(function () {
       $('.hidden_photographer').hide();
    });
    //upon check
    var checkbox = $('.checkbox');
    var hidden_photographer = $('.hidden_photographer');
    // check for default status (when checked, show the hidden_photographer)
    if (checkbox.attr('checked') !== undefined){
        hidden_photographer.show();
    } else {
        hidden_photographer.hide();
    }
    // then simply toggle the hidden_photographer on every change
    checkbox.change(function(){
        hidden_photographer.toggle();
    });
  </script>
<% end %>
